<div class="user_centered">
  <div class="user_wrap">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, class: "user", url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: false %>
      <%= f.label :email %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.label :password %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
